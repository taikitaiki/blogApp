<div class ="contents row">
  <div class="content_post" >

    <div class="col s12 m7">

      <div class="card horizontal">
        <div class="card-stacked">
          <h6 class="card-content">ブログタイトル：<%= @blog.name %></h6>
            <div class="card-action">
              <span>本文：<%= @blog.content %></span>
                  <% if user_signed_in? && current_user.id == @blog.user_id %>
                      <ul class="more_list">
                        <li><%= link_to '編集', "/blogs/#{@blog.id}/edit", method: :get %></li>
                        <li><%= link_to '削除', "/blogs/#{@blog.id}", method: :delete %></li>
                      </ul>
                  <% end %>
              </span>
            </div>
              <div class="container">
              <% if current_user %>
                <%= form_tag("/blogs/#{@blog.id}/comments", method: :post) do %>
                  <textarea cols="30" name="text" placeholder="コメントする" rows="2"></textarea>
                  <input type="submit" value="コメント">
                <% end %>
              <% end %>
                  <div class="comments">
                  <h4>＜コメント一覧＞</h4>
                  <% if @comments %>
                    <% @comments.each do |comment| %>
                      <p>
                        <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
                        <%= comment.text %>
                      </p>
                    <% end %>
                  <% end %>
                   </div>
              </div>
        </div>
      </div>
    </div>


